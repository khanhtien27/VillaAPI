@model IEnumerable<Villa_Web.Models.DTO.VillaDTO>
@{
    ViewData["Title"] = "Index";
}
<hr />


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text=primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villas" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Creat new Villa </a>
        </div>
    </div>

    <table class="table" >
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupany</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@(item.Rate.ToString("c"))</td>
                    <td>
                        <a asp-controller="Villas" asp-action="UpdateVilla" asp-route-villaID="@item.Id" class="btn btn-outline-success"><i class="bi bi-box-arrow-in-up"></i> </a>
                        <a asp-controller="Villas" asp-action="DeleteVilla" asp-route-villaID="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
