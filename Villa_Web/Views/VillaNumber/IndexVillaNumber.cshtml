@model IEnumerable<Villa_Web.Models.DTO.VillaNumberDTO>

@{
    ViewData["Title"] = "Villa Number";
}
<hr />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text=primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Creat new Villa Number </a>
        </div>
    </div>

    <table class="table" >
        <thead>
            <tr>
                <th>Villa's Name</th>
                <th>VillaNo</th>
                <th>SpecialDetail</th>
                <th>VillaID</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaNo</td>
                    <td>@item.SpecialDetail</td>
                    <td>@item.VillaID</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-outline-success"><i class="bi bi-box-arrow-in-up"></i> </a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
